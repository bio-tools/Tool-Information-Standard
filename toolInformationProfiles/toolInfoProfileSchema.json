{
	"$schema": "http://json-schema.org/schema#",
	"$ref": "#/definitions/toolInfoProfile",
	"definitions": {
		"toolInfoProfile": {
			"type": "object",
			"properties": 
			{
				"metadata": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"description": {
							"type": "string"
						},
						"version": {
							"type": "string"
						},
						"comment": {
							"type": "string"
						}
					},
					"required": [
						"name",
						"description"
					]
				},
				"rules": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/rule"
					}
				}
			},
			"additionalProperties": false,
			"required": [
				"metadata",
				"rules"
			]

		},
		"rule": {
			"type": "object",
			
					"properties": {
						"attributes": {
							"$ref": "#/definitions/attributes"
						},
						"constraint": {
							"$ref": "#/definitions/constraint"
						},
						"types": {
							"$ref": "#/definitions/types"
						},
						"requirement": {
							"$ref": "#/definitions/requirement"
						}
					},
					"additionalProperties": false,
					"required": [
						"attributes",
						"types",
						"requirement"
					]
					
		},
		"requirement": {
			"type": "string",
			"enum": [
				"Mandatory",
				"Reccomended",
				"Optional",
				"Not applicable"
			]
		},
		"constraint": {
			"type": "string",
			"enum": [
				"1 or more",
				"all"
			]
		},

		"types": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [
					"Bioinformatics portal",
					"Command-line tool",
					"Database portal",
					"Desktop application",
					"Library",
					"Ontology",
					"Plug-in",
					"Script",
					"SPARQL endpoint",
					"Suite",
					"Web application",
					"Web API",
					"Web service",
					"Workbench",
					"Workflow"
				]
			}
		},
		"attributes": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [
					"name",
					"description",
					"homepage",
					"biotoolsID",
					"biotoolsCURIE",
					"version",
					"otherID",
					"operation",
					"inputData",
